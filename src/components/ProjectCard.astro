---
/**
 * ProjectCard Component
 * 
 * Displays a project or case study entry in a card format with role, year, outcome summary,
 * and technology stack. Extends BaseCard component with project-specific features including
 * an optional featured badge, status indicator, and automatic tech stack truncation.
 * 
 * @component
 * 
 * @example
 * ```astro
 * <ProjectCard
 *   title="E-commerce Platform Redesign"
 *   slug="ecommerce-redesign"
 *   outcomeSummary="Increased conversion rate by 45% and reduced cart abandonment"
 *   role="Lead Frontend Developer"
 *   year={2024}
 *   techStack={['React', 'TypeScript', 'Next.js', 'Tailwind CSS', 'Stripe']}
 *   featured={true}
 *   status="completed"
 * />
 * ```
 */

import BaseCard from './BaseCard.astro';
import ForwardLink from './ForwardLink.astro';

interface Props {
  /** Project title (displayed as card heading) */
  title: string;
  
  /** URL slug for the project (used to generate /projects/{slug} link) */
  slug: string;
  
  /** Brief summary of project outcomes or impact */
  outcomeSummary: string;
  
  /** Your role in the project (e.g., "Lead Developer", "Technical Architect") */
  role: string;
  
  /** Year the project was completed */
  year: number;
  
  /** Optional array of technologies used (displays max 4, shows "+N" for remaining) */
  techStack?: string[];
  
  /** Whether to display the featured badge (default: false) */
  featured?: boolean;
  
  /** Project status (default: 'completed') */
  status?: 'completed' | 'ongoing' | 'archived';
  
  /** GitHub repository URL */
  githubUrl?: string;
}

const { title, slug, outcomeSummary, role, year, techStack = [], featured = false, status = 'completed', githubUrl } = Astro.props;

// Show max 4 tech tags to keep card clean and consistent
const displayTech = techStack.slice(0, 4);
const hasMoreTech = techStack.length > 4;

// Status display configuration
const statusConfig = {
  completed: { label: 'Completed', class: 'status--completed' },
  ongoing: { label: 'Ongoing', class: 'status--ongoing' },
  archived: { label: 'Archived', class: 'status--archived' },
};
const statusInfo = statusConfig[status];
---

<BaseCard href={`/projects/${slug}`} class="project-card">
  <div slot="badge" class="card-badges">
    {featured && (
      <span class="featured-badge">
        <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
        </svg>
        Featured
      </span>
    )}
    {status !== 'completed' && (
      <span class:list={['status-badge', statusInfo.class]}>
        {statusInfo.label}
      </span>
    )}
  </div>
  
  <Fragment slot="meta">{role} Â· {year}</Fragment>
  <Fragment slot="title">{title}</Fragment>
  <Fragment slot="description">{outcomeSummary}</Fragment>
  
  {displayTech.length > 0 && (
    <div slot="tags" class="tags-list">
      {displayTech.map((tech) => (
        <span class="tag">{tech}</span>
      ))}
      {hasMoreTech && (
        <span class="tag-more">+{techStack.length - 4}</span>
      )}
    </div>
  )}
  
  {githubUrl && (
    <div slot="footer" class="project-links">
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="github-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View on GitHub
      </a>
    </div>
  )}
  
  <ForwardLink text="View case study" />
</BaseCard>

<style>
  .card-badges {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .card-badges:empty {
    display: none;
  }

  .featured-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
  }

  .featured-badge svg {
    flex-shrink: 0;
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .status--ongoing {
    background: rgba(34, 197, 94, 0.15);
    color: #22c55e;
  }

  .status--archived {
    background: rgba(115, 115, 115, 0.15);
    color: var(--color-text-muted);
  }

  .tag-more {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    color: var(--color-text-muted);
  }

  .project-links {
    margin-top: 1rem;
  }

  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .github-link:hover {
    color: var(--color-accent);
  }

  .github-link svg {
    flex-shrink: 0;
  }
</style>
